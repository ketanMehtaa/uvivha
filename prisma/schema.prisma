  VERY_FAIR
  FAIR
  WHEATISH
  DARK
}

enum FamilyType {
  Nuclear
  Joint
}

enum LivingWith {
  Alone
  WithFamily
  SharedAccommodation
  Other
}

enum Manglik {
  Yes
  No
}

enum Horoscope {
  Aries
  Taurus
  Gemini
  Cancer
  Leo
  Virgo
  Libra
  Scorpio
  Sagittarius
  Capricorn
